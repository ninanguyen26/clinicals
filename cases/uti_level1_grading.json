  "required_history_topics": [
    "hematuria (blood in urine) timing/amount",
    "vaginal discharge or bleeding",
    "recent sexual activity / STI risk screening",
    "symptom onset and duration",
    "urinary frequency/urgency",
    "fever or chills",
    "flank pain",
    "nausea or vomiting",
    "pregnancy status",
    "medication allergies",
    "current medications/OTC/supplements",
    "family history relevance",
    "social history: alcohol/tobacco/drug use",
    "broader social context relevant to care (occupation/support/sleep/activity/nutrition/safety)",
    "preventive health history when applicable",
    "review of systems breadth in context of complaint"
  ],

  "required_actions": [
    "education: hydration",
    "education: wipe front to back",
    "education: urinate after intercourse",
    "state whether UA would be helpful and plan follow-up testing if symptoms persist/worsen",
    "confirm pregnancy status (LMP + OTC test result if already done)",
    "provide telehealth-appropriate follow-up plan (recheck in ~1 week)",
    "give return precautions for escalation (fever, flank pain, vomiting, worsening symptoms)"
  ],

  "critical_fails": [
    "missed pregnancy status when patient is of childbearing age",
    "failed to assess pyelonephritis red flags (fever/chills, flank pain, vomiting)"
  ],

  "scoring": {
    "history_topic_points": 5,
    "action_points": 10,
    "critical_fail_penalty": 30,
    "passing_score": 84
  }
}
