        "label": "Reporter",
        "max_points": 37
      },
      {
        "id": "interpreter",
        "label": "Interpreter",
        "max_points": 2
      },
      {
        "id": "manager",
        "label": "Manager",
        "max_points": 2
      },
      {
        "id": "educator_evaluator",
        "label": "Educator/Evaluator",
        "max_points": 2
      }
    ],
    "reporter_point_model": {
      "total_points": 37,
      "history_points_target": 23,
      "physical_exam_points_target": 12,
      "case_presentation_points_target": 2,
      "implementation_note": "Focused UTI station redistributes portions of broad ROS/virtual-exam expectations into targeted history and focused exam criteria while preserving total reporter points."
    },
    "common_criteria": [
      "professional_intro_name_title",
      {
        "id": "professional_preferred_name",
        "points": 0.5
      },
      "professional_identity_two_identifiers"
    ],
    "criteria": [
      {
        "id": "professional_telehealth_jurisdiction_safety",
        "section": "professional",
        "label": "Telehealth location, jurisdiction, and safety contingency",
        "points": 1,
        "enabled": false,
        "omit_reason": "Omitted for this CPI1 UTI station because location/jurisdiction/technology contingency scripting is not consistently required in the provided case packet."
      },
      {
        "id": "professional_communication_humanism",
        "section": "professional",
        "label": "Demonstrates professional communication and humanistic rapport",
        "points": 0.5,
        "source": "all",
        "mode": "llm_or_rule",
        "tags": ["professional"],
        "prompt_hint": "Judge transcript-level professionalism and humanistic communication: respectful language, appropriate interview flow (open then focused questions), avoids unnecessary repetition/jargon, and shows empathy/consideration. Only score elements observable in text; do not score visual-only behaviors such as appearance, eye contact, posture, or camera setup.",
        "fallback_rule": {
          "groups": [
            ["what brings you", "how can i help", "tell me more", "can you describe"],
            ["thank you", "i understand", "i'm sorry", "that sounds", "appreciate you sharing"]
          ],
          "min_groups_matched": 1
        }
      },
      {
        "id": "reporter_chief_complaint",
        "section": "reporter",
        "label": "Elicits chief complaint with an open-ended question",
        "points": 0.5,
        "source": "user",
        "mode": "llm_or_rule",
        "tags": ["required_history"],
        "prompt_hint": "Student invites the chief complaint using an open-ended opener such as 'What brings you in today?' or 'How can I help you today?'.",
        "rule": {
          "any": [
            "how can i help you today",
            "what brings you in today",
            "what brings you today",
            "what brings you in"
          ]
        }
      },
      {
        "id": "reporter_oldcarts_bundle",
        "section": "reporter",
        "label": "Elicits OLDCARTS symptom detail bundle",
        "points": 2.5,
        "source": "user",
        "mode": "llm_or_rule",
        "tags": ["required_history"],
        "prompt_hint": "Student elicits at least 5 OLDCARTS elements relevant to this UTI case (onset, location, duration, character, severity, timing, radiation, and what was tried/modifying factors).",
        "rule": {
          "min_groups_matched": 5,
          "groups": [
            ["onset", "when did", "started", "began"],
            ["location", "where", "genital", "abdomen", "flank", "back"],
            ["duration", "how long"],
            ["character", "burning", "sharp"],
            ["severity", "scale", "/10", "0 to 10", "1 to 10"],
            ["timing", "constant", "intermittent", "end of urination", "at the end", "at the end of urination"],
            ["radiation", "spread"],
            ["treatment", "tried", "what have you tried", "better", "worse", "water", "drinking"]
          ]
        }
      },
      {
        "id": "reporter_hpi_summary_oldcarts",
        "section": "reporter",
        "label": "HPI summary includes OLDCARTS-focused presenting illness synthesis",
        "points": 2,
        "source": "hpi",
        "mode": "llm_or_rule",
        "tags": ["required_history"],
        "prompt_hint": "Evaluate the student-written end-of-case HPI summary. Award full credit when the HPI is a coherent 4-5 sentence presenting illness summary that captures at least 5 OLDCARTS-relevant elements for this UTI complaint.",
        "rule": {
          "min_groups_matched": 5,
          "groups": [
            ["onset", "started", "began", "for 2 days", "two days", "x2 days"],
            ["urination", "urinary", "dysuria", "burning", "genital"],
            ["duration", "during urination", "while urinating", "intermittent", "constant"],
            ["character", "sharp", "burning pain", "pain with urination"],
            ["severity", "/10", "2-3", "2/10", "3/10", "mild"],
            ["timing", "today", "since", "worse", "first noticed"],
            ["tried", "hydration", "water", "modifying factors", "nothing else"]
          ]
        }
      },
      {
        "id": "reporter_frequency_urgency",
        "section": "reporter",
        "label": "Assesses urinary frequency/urgency",
        "points": 2.5,
        "source": "user",
        "mode": "llm_or_rule",
        "tags": ["required_history"],
        "rule": {
          "any": ["frequency", "frequent", "urgency", "going more often", "urinate more", "pee more"]
        }
      },
      {
        "id": "reporter_hematuria",
        "section": "reporter",
        "label": "Assesses blood in urine details",
        "points": 2.5,
        "source": "user",
        "mode": "llm_or_rule",
        "tags": ["required_history"],
        "rule": {
          "any": ["blood in urine", "hematuria", "blood when you urinate", "blood when you pee", "how much blood"]
        }
      },
      {
        "id": "reporter_fever_chills",
        "section": "reporter",
        "label": "Assesses fever/chills",
        "points": 2.5,
        "source": "user",
        "mode": "llm_or_rule",
        "tags": ["required_history", "red_flag", "critical_fail"],
        "rule": {
          "any": ["fever", "chills", "temperature"]
