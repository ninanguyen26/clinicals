      {
        "id": "reporter_hydration_context",
        "section": "reporter",
        "label": "Assesses hydration/caffeine context",
        "points": 0.5,
        "source": "user",
        "mode": "llm_or_rule",
        "rule": {
          "any": ["hydration", "drink water", "fluid intake", "how much water", "coffee", "caffeine"]
