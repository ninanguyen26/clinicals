              "frequency",
              "urgency",
              "blood in urine",
              "hematuria",
              "vaginal discharge",
              "vaginal bleeding",
              "pregnant",
              "lmp",
              "last menstrual period"
            ],
            ["flank pain", "back pain", "side pain", "cva tenderness"]
          ],
          "min_groups_matched": 3
        }
      },
      {
        "id": "reporter_ros_pertinent_area_penalty",
        "section": "reporter",
        "label": "Penalty: misses pertinent ROS areas for this complaint",
        "points": 0,
        "source": "user",
        "mode": "rule",
        "tags": ["required_history"],
        "penalty_if_missed": 1,
        "prompt_hint": "Apply a -1 penalty when the student fails to assess all pertinent UTI ROS areas.",
        "rule": {
          "groups": [
            ["fever", "chills", "temperature"],
            ["flank pain", "back pain", "side pain", "cva tenderness"],
            ["nausea", "vomit", "vomiting", "throw up"],
            ["vaginal discharge", "vaginal bleeding"],
            ["pregnant", "pregnancy", "lmp", "last menstrual period"]
          ]
        }
