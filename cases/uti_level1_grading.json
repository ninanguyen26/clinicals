        "tags": ["required_history", "red_flag", "critical_fail"],
        "rule": {
          "any": ["nausea", "vomit", "vomiting", "throw up"]
        }
      },
      {
        "id": "reporter_vaginal_discharge_bleeding",
        "section": "reporter",
        "label": "Assesses vaginal discharge or bleeding",
        "points": 3,
        "source": "user",
        "mode": "llm_or_rule",
        "tags": ["required_history"],
        "rule": {
          "any": ["vaginal discharge", "vaginal bleeding", "any vaginal discharge", "any vaginal bleeding"]
